  <form method="POST" action="/sign_up">
    <div class="container">
      <h1>Account registration form</h1>
      <p>Please fill the data to create an account.</p>
      <hr>

      <% if (error.length > 0) { %>
      <p><b><%= error %></b></p>
      <% } %>

      <label for="email"><b>Email</b></label>
      <input type="text" placeholder="Enter Email" name="email" id="email" required>

      <label for="name"><b>Name</b></label>
      <input type="text" placeholder="Enter your name" name="name" id="name" required>

      <label for="surname"><b>Surname</b></label>
      <input type="text" placeholder="Enter your surname" name="surname" id="surname" required>

      <label for="psw"><b>Password</b></label>
      <input type="password" pattern="/^[a-zA-Z0-9!@#\$%\^\&*_=+-]{8,12}$/g" placeholder="Enter Password" name="psw" id="psw" required>

      <hr>

      <button type="submit" class="registerbtn">Register</button>
    </div>
  </form>
  <script>
    $(document).on('keypress', function(e) {
      if (e.which === 13) {
        $(".registerbtn").click();
      }
    });
  </script>
